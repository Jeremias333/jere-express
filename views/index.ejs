<%- include("partials/header.ejs") %>
<%- include("partials/homenavbar.ejs") %>
<body>
	<div class="container">
		<br>
		<div class="jumbotron">
		  <h1 class="display-4">Bem vindo, espero que curta meu blog</h1>
		  <p class="lead">Aqui você encontrará muitos artigos de conteúdos exclusivos e bem explicadinhos.</p>
		  <hr class="my-4">
		  <p>Todos são bem vindos. Estou sempre abertos para sugestões: jeremiasprogrammer@gmail.com</p>
		</div>
		<br>
		<% articles.forEach(article => { %>
			<div class="card">
				<div class="card-header">
					<h2><%= article.title %></h2>				
				</div>
				<div class="card-body">
					<a class="btn btn-success" href="/<%= article.slug%>">Ler sobre</a>
				</div>
			</div>
		<% }); %>
	</div>
</body>
